<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#383E40" >
    <ImageView 
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/bell_green"
        android:id="@+id/itemMessageLogo"
        />
	<LinearLayout 
	    android:layout_width="1dp"
	    android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="#E4E4E4"
        android:layout_toRightOf="@+id/itemMessageLogo"
        android:id="@+id/itemMessageLine"
        android:orientation="horizontal"
	    ></LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:id="@+id/itemMessgaeRight"
	    android:layout_toRightOf="@+id/itemMessageLine"
	    android:layout_margin="15dp"
	    >
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/itemMessageRightLine1"
	        android:text="您接受了一条来自【紫悦金城】的任务"
	        android:textColor="#15B288"
	        />
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/itemMessageRightLine2"
	        android:text="课获得报酬500元，需骑行80公里。"
	        android:textColor="#FFFFFF"
	        android:layout_marginTop="10dp"
	        />
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/itemMessageRightLine3"
	        android:text="联系电话：13013013000"
	        android:textColor="#FFFFFF"
	        android:layout_marginTop="10dp"
	        />
	</LinearLayout>
</RelativeLayout>
